<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.TerraSync" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Transparent System Bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Ikon status bar tetap terlihat -->
    </style>

    <!-- Application-wide Theme -->
    <style name="Theme.TerraSync" parent="Base.Theme.TerraSync" />

    <!-- MapActivity Theme -->
    <style name="Theme.TerraSync.MapActivity" parent="Base.Theme.TerraSync">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>
