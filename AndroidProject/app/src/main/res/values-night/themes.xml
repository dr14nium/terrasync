<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme -->
    <style name="Base.Theme.TerraSync" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorPrimary">@color/primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Transparent System Bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Ikon tetap terlihat di night mode -->
    </style>

    <!-- Application-wide Theme -->
    <style name="Theme.TerraSync" parent="Base.Theme.TerraSync" />

    <!-- MapActivity Theme -->
    <style name="Theme.TerraSync.MapActivity" parent="Base.Theme.TerraSync">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
