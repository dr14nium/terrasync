<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/primary" />
        </shape>
    </item>
    <!-- Inactive -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>
